{
  "name": "@js-hook/core",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types",
  "scripts": {
    "build": "shx rm -rf dist && npm run build:types && npm run build:browser && npm run build:cjs",
    "build:cjs": "tsc -b ./tsconfig.cjs.json",
    "build:declaration": "tsc src/index.ts src/hook.d.ts --declaration --skipLibCheck --allowSyntheticDefaultImports --allowJs --out dist/index.d.ts",
    "build:esm": "tsc -b ./tsconfig.esm.json",
    "build:types": "tsc -b ./tsconfig.types.json && shx cp src/*.d.ts dist/types",
    "build:browser": "npm run build:esm && rollup dist/esm/browser/index.js --format iife --file dist/browser.js --no-strict",
    "build:node": "rollup dist/esm/index.js --format cjs --file dist/index.js",
    "test": "jest --all"
  },
  "keywords": [],
  "author": "22earth",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.38",
    "jest": "^28.1.0",
    "jest-extended": "^2.0.0",
    "rollup": "^2.75.4",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@babel/core": "^7.18.2",
    "@babel/generator": "^7.18.2",
    "@babel/template": "^7.16.7",
    "@babel/types": "^7.18.4",
    "@types/babel__core": "^7.1.19",
    "@types/babel__generator": "^7.6.4",
    "@types/babel__template": "^7.4.1",
    "@types/jsdom": "^16.2.14",
    "jsdom": "^19.0.0"
  }
}